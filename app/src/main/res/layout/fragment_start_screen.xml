<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        tools:context=".module.setting.bootmsheet.StartScreenFragment">

        <View
            android:id="@+id/view"
            android:layout_width="160dp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_screen"
            style="@style/textview_title"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="@dimen/_35sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle"/>
        
        <TextView
            android:id="@+id/tvLibraryHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/library_home"
            style="@style/textview_regular"
            android:textSize="18sp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

        <RadioButton
            android:id="@+id/rbLibraryHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tvLibraryHome"
            app:layout_constraintEnd_toEndOf="@+id/ivClose"
            app:layout_constraintBottom_toBottomOf="@+id/tvLibraryHome"/>

        <View
            android:id="@+id/dividerWarningPeriod"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/rbLibraryHome"
            app:layout_constraintEnd_toEndOf="@+id/rbLibraryHome"
            app:layout_constraintStart_toStartOf="@+id/tvLibraryHome"/>

        <TextView
            android:id="@+id/tvUserSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/user_summary"
            style="@style/textview_regular"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/dividerWarningPeriod"
            app:layout_constraintTop_toBottomOf="@+id/dividerWarningPeriod"/>

        <RadioButton
            android:id="@+id/rbUserSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tvUserSummary"
            app:layout_constraintEnd_toEndOf="@+id/ivClose"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserSummary"/>

        <Button
            android:id="@+id/btnApply"
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="140dp"
            android:background="@drawable/button_background"
            android:text="@string/apply"
            app:layout_constraintEnd_toEndOf="@+id/rbUserSummary"
            app:layout_constraintStart_toStartOf="@+id/tvUserSummary"
            app:layout_constraintTop_toBottomOf="@+id/tvUserSummary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>