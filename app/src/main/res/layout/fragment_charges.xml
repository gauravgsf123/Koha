<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp"
            tools:context=".module.my_account.charges.ChargesFragment">
            <TextView
                android:id="@+id/tvFine"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:text="@string/fine"
                style="@style/textview"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="40dp"
                android:background="@drawable/tabselected_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvPay"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:text="@string/pay"
                style="@style/textview"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@drawable/tabselected_background"
                app:layout_constraintTop_toTopOf="@+id/tvFine"
                app:layout_constraintStart_toEndOf="@+id/tvFine"/>

            <TextView
                android:id="@+id/tvYourCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/textview_bold"
                android:layout_marginTop="30dp"
                android:text="@string/your_charges"
                app:layout_constraintStart_toStartOf="@+id/tvFine"
                app:layout_constraintTop_toBottomOf="@+id/tvFine"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/margin_start"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvYourCharge"
                app:layout_constraintTop_toBottomOf="@+id/tvYourCharge">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:paddingStart="13dp"
                        android:background="@drawable/shape_top_cornor"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/textview_medium"
                            android:text="@string/date_"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/textview_medium"
                            android:text="@string/description"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_weight="5"/>
                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/textview_medium"
                            android:text="@string/amount"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_weight="1.5"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_charges_list"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginTop="14dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvTotalDueTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textview_medium"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:text="@string/total_due" />

                        <TextView
                            android:id="@+id/tvTotalDue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textview_medium"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="10dp"
                            android:text="â‚¹ 0." />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:background="#E2E5EA">
                        <View
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="18dp"
                            android:layout_gravity="end"
                            android:background="@color/primary_dark"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>