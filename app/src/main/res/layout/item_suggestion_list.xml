<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginTop="13dp">

        <CheckBox
            android:id="@+id/cbItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="false" />

        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:text="Higher Engineering Mathematics"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tvSuggestedOn"
            app:layout_constraintTop_toTopOf="@+id/cbItem"
            app:layout_constraintStart_toEndOf="@+id/cbItem" />

        <TextView
            android:id="@+id/tvSummaryDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_list_item"
            android:text="Grewal, B.S., -2019, ( New Delhi)- English Books"
            android:layout_marginTop="5dp"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvSummaryTitle"
            app:layout_constraintStart_toStartOf="@+id/tvSummaryTitle"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus"/>

        <TextView
            android:id="@+id/tvSuggestedOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_list_item"
            android:text="04/10/2023"
            android:layout_gravity="center"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/cbItem"
            app:layout_constraintStart_toEndOf="@+id/tvSummaryTitle"
            app:layout_constraintEnd_toStartOf="@+id/tvManageBy" />

        <TextView
            android:id="@+id/tvManageBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_list_item"
            android:text="04/10/2023"
            android:layout_gravity="center"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/cbItem"
            app:layout_constraintStart_toEndOf="@+id/tvSuggestedOn"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_list_item"
            android:text="04/10/2023"
            android:layout_gravity="center"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/cbItem"
            app:layout_constraintStart_toEndOf="@+id/tvManageBy"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>