<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.setting.SettingFragment">

        <TextView
            android:id="@+id/tvWebOpac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_bold"
            android:text="@string/web_opac"
            android:textSize="20sp"
            android:textColor="@color/text_header"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvAccountTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_item_list"
            android:text="@string/accounts"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWebOpac"
            app:layout_constraintEnd_toEndOf="@+id/tvWebOpac"
            app:layout_constraintStart_toStartOf="@+id/tvWebOpac"/>

        <TextView
            android:id="@+id/tvAccountDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_color_secondary"
            android:text="Manage your library account details."
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvAccountTitle"
            app:layout_constraintStart_toStartOf="@+id/tvAccountTitle"/>

        <View
            android:id="@+id/dividerAccount"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountDetail"
            app:layout_constraintEnd_toEndOf="@+id/tvAccountDetail"
            app:layout_constraintStart_toStartOf="@+id/tvAccountDetail"/>

        <TextView
            android:id="@+id/tvStartScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_item_list"
            android:text="@string/start_screen"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dividerAccount"
            app:layout_constraintEnd_toEndOf="@+id/dividerAccount"
            app:layout_constraintStart_toStartOf="@+id/dividerAccount"/>

        <TextView
            android:id="@+id/tvStartScreenDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_color_secondary"
            android:text="@string/which_screen_should_be_shown_on_startup"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStartScreen"
            app:layout_constraintEnd_toEndOf="@+id/tvStartScreen"
            app:layout_constraintStart_toStartOf="@+id/tvStartScreen"/>

        <View
            android:id="@+id/dividerStartScreen"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStartScreenDetail"
            app:layout_constraintEnd_toEndOf="@+id/tvStartScreenDetail"
            app:layout_constraintStart_toStartOf="@+id/tvStartScreenDetail"/>

        <TextView
            android:id="@+id/tvNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_bold"
            android:text="@string/notifications"
            android:textSize="20sp"
            android:textColor="@color/text_header"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dividerStartScreen"
            app:layout_constraintEnd_toEndOf="@+id/dividerStartScreen"
            app:layout_constraintStart_toStartOf="@+id/dividerStartScreen"/>

        <TextView
            android:id="@+id/tvExpiringItemsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_item_list"
            android:text="@string/expiring_items"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNotifications"
            app:layout_constraintEnd_toEndOf="@+id/tvNotifications"
            app:layout_constraintStart_toStartOf="@+id/tvNotifications"/>

        <CheckBox
            android:id="@+id/cbExpiringItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            app:layout_constraintTop_toTopOf="@+id/tvExpiringItemsTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvExpiringItemsTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvExpiringItemsTitle"/>

        <TextView
            android:id="@+id/tvExpiringItemsDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_color_secondary"
            android:text="Notify, if an item is about to expire (no warranties given)"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExpiringItemsTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvExpiringItemsTitle"
            app:layout_constraintStart_toStartOf="@+id/tvExpiringItemsTitle"/>

        <View
            android:id="@+id/dividerExpiringItems"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExpiringItemsDetail"
            app:layout_constraintEnd_toEndOf="@+id/tvExpiringItemsDetail"
            app:layout_constraintStart_toStartOf="@+id/tvExpiringItemsDetail"/>

        <TextView
            android:id="@+id/tvWarningPeriodTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_item_list"
            android:text="@string/warning_period"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dividerExpiringItems"
            app:layout_constraintEnd_toEndOf="@+id/dividerExpiringItems"
            app:layout_constraintStart_toStartOf="@+id/dividerExpiringItems"/>

        <CheckBox
            android:id="@+id/cbWarningPeriodItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/tvWarningPeriodTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvWarningPeriodTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvWarningPeriodTitle"/>

        <TextView
            android:id="@+id/tvWarningPeriodDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_color_secondary"
            android:text="@string/warning_period_notification"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWarningPeriodTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvWarningPeriodTitle"
            app:layout_constraintStart_toStartOf="@+id/tvWarningPeriodTitle"/>

        <View
            android:id="@+id/dividerWarningPeriod"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWarningPeriodDetail"
            app:layout_constraintEnd_toEndOf="@+id/tvWarningPeriodDetail"
            app:layout_constraintStart_toStartOf="@+id/tvWarningPeriodDetail"/>

        <TextView
            android:id="@+id/tvRepeatNotificationsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textview_medium"
            android:textColor="@color/text_item_list"
            android:text="@string/repeat_notifications"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/dividerWarningPeriod"
            app:layout_constraintEnd_toEndOf="@+id/dividerWarningPeriod"
            app:layout_constraintStart_toStartOf="@+id/dividerWarningPeriod"/>

        <CheckBox
            android:id="@+id/cbRepeatNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            app:layout_constraintTop_toTopOf="@+id/tvRepeatNotificationsTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvRepeatNotificationsTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvRepeatNotificationsTitle"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>